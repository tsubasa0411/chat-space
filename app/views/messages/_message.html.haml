.message{ data: {id: "#{message.id}"} } 
  .upper-message
    .upper-message__user
      = message.user.name
    .upper-message__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?